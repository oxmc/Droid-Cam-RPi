cd $HOME/Droid-Cam-RPI
tar -xf /home/pi/Droid-Cam-RPi/libjpeg-turbo-2.1.0.tar.gz
sudo cp -r libjpeg-turbo-2.1.0 /tmp
git clone https://github.com/dev47apps/droidcam
cd /tmp/libjpeg-turbo-2.1.0
cmake -G "Unix Makefiles"
make
sudo make install
sudo make deb
sudo dpkg -i libjpeg-turbo_2.1.0_armhf.deb
sudo apt install raspberrypi-kernel-headers libavutil-dev libswscale-dev libasound2-dev libspeex-dev libusbmuxd-dev gtk+-3.0 libappindicator3-dev
cd $HOME/droidcam-raspberrypi-auto-install
make droidcam-cli
make droidcam
sudo ./install-client
sudo ./install-video
echo -e "The Installation has completed..\nUse 'sudo ./droidcam' to launch droidcam"
